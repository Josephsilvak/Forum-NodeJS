<!doctype html>
<html lang="pt-br">
    <head>
        <title>Fórum___ Faça já sua pergunta!</title>
        <meta charset="utf-8">
        <link rel="icon"            href="/img/logo.png">
        <meta name="viewport"       content="width=device-width, initial-scale=1.0">
        <meta name="author"         content="autor do site">
        <meta name="keywords"       content="palavras-separadas,por,virgula">
        <meta name="description"    content="descrição do site">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
        <!-- Style CSS -->
        <link rel="stylesheet"      type="text/css" href="/css/style.css">
    </head>
    <body>
        <div class="container">
            <br>
            <div class="card">
                <div class="card-header">
                    <h2 class="text-secondary">Faça uma pergunta!</h2>
                </div>
                <div class="card-body">
                    <form action="/salvarPergunta" method="POST">
                        <label for="titulo">Título:</label>
                        <input type="text" name="titulo" placeholder="Digite seu título aqui!" class="form-control">
                        <br>
                        <label for="descricao">Descrição:</label>
                        <textarea name="descricao" placeholder="Descreva sua pergunta aqui!" class="form-control"></textarea>
                        <br>
                        <button class="btn btn-secondary text-white">Enviar</button>
                    </form>
                </div>
            </div><!--card-->

            <br><hr><hr><br>
            
            <h2 class="text-danger">Perguntas recentes:</h2><br>
            <% perguntas.forEach(pergunta => { %>
                <div class="card">
                    <div class="card-body">
                        <h3><%= pergunta.titulo %> </h3>
                        <footer class="blockquote-footer" style="margin: 0 10px 0 20px; font-size: 1.1em;">
                            <%= pergunta.descricao %>
                        </footer>
                    </div>
                    <div class="card-footer">
                        <a href="pergunta/<%= pergunta.id %> "><button class="btn btn-danger">Responder</button></a>
                    </div>
                </div><!--card-->
                <br>
            <% }) %>  
            
        </div><!--container-->
    </body>
    <!-- Bootstrap  JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/bootstrap/js/bootstrap.min.js">
</html>