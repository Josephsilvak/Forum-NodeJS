<!doctype html>
<html lang="pt-br">
    <head>
        <title>Pergunta: <%= pergunta.titulo %> </title>
        <meta charset="utf-8">
        <link rel="icon"            href="/img/logo.png">
        <meta name="viewport"       content="width=device-width, initial-scale=1.0">
        <meta name="author"         content="autor do site">
        <meta name="keywords"       content="palavras-separadas,por,virgula">
        <meta name="description"    content="descrição do site">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
        <!-- Style CSS -->
        <link rel="stylesheet"      type="text/css" href="/css/style.css">
    </head>
    <body>
        <div class="container">
            <br>
                <div class="card">
                    <div class="card-body">
                        <h3><%= pergunta.titulo %></h3>
                        <footer class="blockquote-footer" style="margin: 0 10px 0 20px; font-size: 1.1em;">
                            <%= pergunta.descricao %>
                        </footer>
                    </div>
                    <div class="card-footer">
                        <br>
                        <form action="/responder" method="POST">
                            <h6 class="text-secondary">Responder:</h6>
                            <textarea name="corpo" placeholder="Deixe sua resposta aqui!" class="form-control"></textarea><br>
                            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                            <button class="btn btn-primary">Responder</button>
                        </form>
                    </div>
                </div><!--card-->

                <br><hr><hr><br>
            
                <h2 class="text-danger">Respostas:</h2><br>

                    <% respostas.forEach(resposta => { %>
                        <div class="card">
                            <div class="card-body">
                                <h5>Usuário anônomo:</h5>
                                <footer class="blockquote-footer" style="margin: 0 10px 0 20px; font-size: 1.1em;">
                                    <%= resposta.corpo %> 
                                </footer>
                            </div>
                        </div><!--card-->
                        <br>
                    <% }) %>  


            
        </div><!--container-->
    </body>
    <!-- Bootstrap  JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/bootstrap/js/bootstrap.min.js">
</html>